{
  "api": {
    "jwt_secret": "${JWT_SECRET:-5up3r5tr0n6p455}"
  },
  "app": {
    "mode": "${APP_MODE:-release}",
    "port": "${APP_PORT:-8080}",
    "env_files": []
  },
  "org": {
    "abbr": "${APP_ABBR:-XL}",
    "name": "${APP_NAME:-Xet Labs}",
    "domain": "${APP_DOMAIN:-example.com}",
    "url": "${APP_URL:-https://example.com}",
    "img": [],
    "logo": []
  },
  "store": {
    "db": {
      "default_profile": "${DB_DEFAULT:-db}",
      "conn": {
        "db": {
          "enable": "${DB_ENABLE:-true}",
          "db": "${DB:-XI}",
          "user": "${DB_USER:-XI_u}",
          "pass": "${DB_PASS}",
          "driver": "${DB_DRIVER:-mysql}",
          "host": "${DB_HOST:-127.0.0.1}",
          "port": "${DB_PORT:-3306}",
          "charset": "${DB_CHARSET:-utf8mb4}",
          "engine": "${DB_ENGINE}",
          "collation": "${DB_COLLATION:-utf8mb4_unicode_ci}",
          "socket": "${DB_SOCKET}",
          "prefix": "${DB_PREFIX}",
          "prefixindexes": true,
          "strict": true
        }
      }
    },
    "rdb": {
      "default_profile": "${RDB_DEFAULT:-rdb}",
      "conn": {
        "rdb": {
          "enable": "${RDB_ENABLE:-true}",
          "rdb": "${RDB:-0}.int",
          "driver": "redis",
          "host": "${RDB_HOST:-127.0.0.1}",
          "port": "${RDB_PORT:-6379}",
          "pass": ""
        }
      }
    }
  },
  "web": {
    "css_base_dir": "web/partials",
    "template_dir": [
      "internal/data/web",
      "web"
    ],
    "default": {
      "ctrl": {
        "mode": "managed",
        "layout": "layout/default"
      },
      "meta": {
        "robots": "index, follow",
        "referrer": "no-referrer-when-downgrade",
        "title_suffix_inc": true,
        "title_suffix_sep": " | "
      },
      "nav_menu": [
        {
          "label": "Home",
          "url": "/"
        },
        {
          "label": "Blog",
          "url": "/blog"
        },
        {
          "label": "Product",
          "url": "#"
        },
        {
          "label": "Support",
          "url": "#"
        },
        {
          "label": "Contact",
          "url": "#"
        }
      ],
      "css": [
        "/res/css/app.css"
      ],
      "js99": [
        "/res/js/app.js"
      ]
    },
    "pages": {
      "home": {
        "route": "/",
        "ctrl": {
          "render": "file"
        },
        "content": {
          "file": "resource/partials/home/home.part.html"
        },
        "meta": {
          "title": "XetLabs"
        },
        "web": {
          "menu": "Home"
        }
      }
    }
  }
}