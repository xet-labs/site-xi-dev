{
  "api": {
    "jwt_secret": "${JWT_SECRET:-5up3r5tr0n6p455}"
  },
  "app": {
    "mode": "${APP_MODE:-release}",
    "port": "${APP_PORT:-8080}",
    "env_files": []
  },
  "brand": {
    "name": "${APP_NAME:-Xet Labs}",
    "abbr": "${APP_ABBR:-XL}",
    "logo": [],
    "featured_img": [],
    "domain": "${APP_DOMAIN:-example.com}",
    "url": "${APP_URL:-https://example.com}"
  },
  "db": {
    "db_default": "${DB_DEFAULT:-db}",
    "rdb_default": "${RDB_DEFAULT:-rdb}",
    "rdb_prefix": "${APP_ABBR:-redis}",
    "conn": {
      "db": {
        "enable": "${DB_ENABLE:-false}",
        "db": "${DB:-XI}",
        "user": "${DB_USER:-XI_u}",
        "pass": "${DB_PASS:-5up3r5tr0n6p455}",
        "driver": "${DB_DRIVER:-mysql}",
        "host": "${DB_HOST:-127.0.0.1}",
        "port": "${DB_PORT:-3306}",
        "charset": "${DB_CHARSET:-utf8mb4}",
        "engine": "${DB_ENGINE}",
        "collation": "${DB_COLLATION:-utf8mb4_unicode_ci}",
        "socket": "${DB_SOCKET}",
        "prefix": "${DB_PREFIX}",
        "prefixindexes": true,
        "strict": true
      },
      "rdb": {
        "enable": "${RDB_ENABLE:-true}",
        "rdb": "${RDB:-0}.int",
        "driver": "redis",
        "host": "${RDB_HOST:-127.0.0.1}",
        "port": "${RDB_PORT:-6379}",
        "pass": ""
      }
    }
  },
  "view": {
    "css_base_dir": "view/partials",
    "template_dirs": [
      "view"
    ],
    "default": {
      "mode": "managed",
      "layout": "layout/default",
      "nav_menu": [
        {
          "label": "Home",
          "url": "/"
        },
        {
          "label": "Blog",
          "url": "/blog"
        },
        {
          "label": "Product",
          "url": "#"
        },
        {
          "label": "Support",
          "url": "#"
        },
        {
          "label": "Contact",
          "url": "#"
        }
      ],
      "css": [
        "/res/css/app.css"
      ],
      "js99": [
        "/res/js/jquery/jquery.min.js",
        "/res/js/app.js",
        "/res/js/util/content-src.js"
      ],
      "meta": {
        "referrer": "no-referrer-when-downgrade",
        "robots": "index, follow",
        "tags": [
          "XetLabs"
        ],
        "publisher": {
          "name": "Xet Labs",
          "url": "${APP_URL:-https://example.com}"
